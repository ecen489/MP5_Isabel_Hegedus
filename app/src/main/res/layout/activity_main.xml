<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rad"

        android:layout_marginLeft="130dp"
        android:layout_marginTop="173dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Work Song"

            />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Glory" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Good to be Alone" />
    </RadioGroup>
    <ImageView
        android:id="@+id/hozier_im"
        android:visibility="gone"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/hozier_album"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="350dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/kennedy_im"
        android:visibility="gone"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/download"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="350dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/corby_im"
        android:visibility="gone"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/telluric"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="350dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="start"
        android:onClick="b_start"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="600dp"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="stop"
        android:onClick="b_stop"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="600dp"
        app:layout_constraintLeft_toLeftOf="parent"


        />
</android.support.constraint.ConstraintLayout>